<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.spbau.mit.starlab.financialassistant" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ExpensesActivity"
            android:label="@string/title_activity_expenses"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.mit.starlab.financialassistant.MainActivity" />
        </activity>
        <activity
            android:name=".IncomingActivity"
            android:label="@string/title_activity_incoming"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.mit.starlab.financialassistant.MainActivity" />
        </activity>
        <activity
            android:name=".OtherFunctionsActivity"
            android:label="@string/title_activity_other_functions"
            android:parentActivityName=".MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.mit.starlab.financialassistant.MainActivity" />
        </activity>
        <activity
            android:name=".AddExpenseActivity"
            android:label="@string/title_activity_add_expense"
            android:parentActivityName=".ExpensesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="ru.spbau.mit.starlab.financialassistant.ExpensesActivity" />
        </activity>
    </application>

</manifest>
