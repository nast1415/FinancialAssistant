<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.spbau.mit.starlab.financialassistant.fragments.RegularExpensesFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button"
        style="@style/ButtonStyle"
        android:text="Записать" />


    <TextView
        android:id="@+id/txtRegularExpense"
        style="@style/FragmentHeader"
        android:text="Добавить регулярную трату" />

    <TextView
        android:id="@+id/txtFrom"
        style="@style/UsualTextStyle"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:text="с" />

    <TextView
        android:id="@+id/txtTo"
        style="@style/UsualTextStyle"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginLeft="195dp"
        android:layout_marginStart="195dp"
        android:layout_marginTop="5dp"
        android:text="по" />

    <TextView
        android:id="@+id/txtPeriod"
        style="@style/UsualTextStyle"
        android:layout_below="@+id/txtRegularExpense"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Период (выберите даты начала и конца)" />

    <TextView
        android:id="@+id/txtName"
        style="@style/UsualTextStyle"
        android:layout_alignLeft="@id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginTop="40dp"
        android:text="Название" />

    <TextView
        android:id="@+id/txtCategory"
        style="@style/UsualTextStyle"
        android:layout_alignLeft="@id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginTop="105dp"
        android:text="Категория" />

    <TextView
        android:id="@+id/txtSum"
        style="@style/UsualTextStyle"
        android:layout_alignLeft="@id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginTop="170dp"
        android:text="Сумма" />

    <EditText
        android:id="@+id/eTxtStartPeriod"
        style="@style/SmallTextBoxesStyle"
        android:layout_below="@id/txtPeriod"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="5dp"
        android:inputType="date" />

    <EditText
        android:id="@+id/eTxtEndPeriod"
        style="@style/SmallTextBoxesStyle"
        android:layout_below="@id/txtPeriod"
        android:layout_marginLeft="235dp"
        android:layout_marginTop="5dp"
        android:inputType="date" />

    <EditText
        android:id="@+id/eTxtName"
        style="@style/TextBoxesStyle"
        android:layout_alignLeft="@+id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@id/txtName"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/eTxtDeposit"
        style="@style/TextBoxesStyle"
        android:layout_alignLeft="@+id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@id/txtCategory"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/eTxtSum"
        style="@style/TextBoxesStyle"
        android:layout_alignLeft="@+id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@id/txtSum"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:inputType="number" />

    <TextView
        android:id="@+id/txtComment"
        style="@style/UsualTextStyle"
        android:layout_alignLeft="@id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@+id/txtPeriod"
        android:layout_marginTop="235dp"
        android:text="Комментарий" />

    <ScrollView
        style="@style/ScrollViewStyle"
        android:layout_alignLeft="@+id/txtPeriod"
        android:layout_alignStart="@+id/txtPeriod"
        android:layout_below="@+id/txtComment"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp">

        <EditText
            android:id="@+id/eTxtComment"
            style="@style/CommentBoxStyle"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp" />
    </ScrollView>

</RelativeLayout>