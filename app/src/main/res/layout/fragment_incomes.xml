<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.spbau.mit.starlab.financialassistant.fragments.CreditsFragment">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/button"
        style="@style/Base.TextAppearance.AppCompat.Medium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:text="Записать" />


    <TextView
        android:id="@+id/txtIncomeInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Добавить доход"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtIncomeInfo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="60dp"
        android:text="Дата"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtIncomeInfo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="110dp"
        android:text="Название"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />


    <TextView
        android:id="@+id/txtSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtIncomeInfo"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="160dp"
        android:text="Сумма"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/eDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIncomeInfo"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="60dp"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:inputType="date" />


    <EditText
        android:id="@+id/etxtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtName"
        android:layout_alignLeft="@+id/eDate"
        android:layout_alignStart="@+id/eDate"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:inputType="text" />


    <EditText
        android:id="@+id/eTxtSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/txtSum"
        android:layout_alignLeft="@+id/eDate"
        android:layout_alignStart="@+id/eDate"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:inputType="number" />


    <TextView
        android:id="@+id/txtComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtIncomeInfo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="220dp"
        android:text="Комментарий"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="20dp" />

    <ScrollView
        android:layout_height="60dp"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtComment"
        android:layout_marginTop="20dp"
        >

        <EditText
            android:id="@+id/eTxtComment"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:background="@drawable/edit_text_design"
            android:ems="10"
            android:inputType="textMultiLine"
            android:minLines="3" />
    </ScrollView>

</RelativeLayout>